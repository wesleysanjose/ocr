FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=8000

# General paths
export PATH="$CONDA_PREFIX/bin:$PATH"
export LD_LIBRARY_PATH="$CONDA_PREFIX:$LD_LIBRARY_PATH"
export LD_LIBRARY_PATH="$CONDA_PREFIX/lib:$LD_LIBRARY_PATH"
export CPATH="$CONDA_PREFIX/include:$CPATH"

# CUDA specific settings
export CUDA_HOME="$CONDA_PREFIX"  # Assumes CUDA is installed in the Conda environment
export PATH="$CUDA_HOME/bin:$PATH"
export CPATH="$CUDA_HOME/include:$CPATH"

# Corrected: Set CUDA_PATH for CUDA library location, not mixed with CPATH
export CUDA_PATH="$CUDA_HOME"

# MongoDB settings
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=forensic_docs
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_URI=

# Storage settings
STORAGE_PROVIDER=local
# S3 settings (only needed if STORAGE_PROVIDER=s3)
S3_BUCKET_NAME=forensic-docs
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OCR settings
OCR_ENGINE=paddle
OCR_LANG=ch

# Logging
LOG_LEVEL=DEBUG